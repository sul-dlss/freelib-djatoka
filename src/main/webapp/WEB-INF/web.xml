<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>freelib-djatoka</display-name>
  <description>A fork of the adore-djatoka image server</description>
  <!--
  <filter>
    <filter-name>cross-origin</filter-name>
    <filter-class>org.eclipse.jetty.servlets.CrossOriginFilter</filter-class>
  </filter>
  -->
  <filter>
    <filter-name>IIIFServletFilter</filter-name>
    <filter-class>info.freelibrary.djatoka.iiif.IIIFServletFilter</filter-class>
    <init-param>
      <param-name>prefix</param-name>
      <param-value>iiif</param-value>
    </init-param>
  </filter><!--
  <filter>
    <filter-name>DebugServletFilter</filter-name>
    <filter-class>info.freelibrary.djatoka.util.DebugServletFilter</filter-class>
  </filter>--><!--
  <filter-mapping>
    <filter-name>cross-origin</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>--><!--
  <filter-mapping>
    <filter-name>DebugServletFilter</filter-name>
    <url-pattern>/iiif/*</url-pattern>
  </filter-mapping>-->
  <filter-mapping>
    <filter-name>IIIFServletFilter</filter-name>
    <url-pattern>/iiif/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>resolver</servlet-name>
    <servlet-class>gov.lanl.adore.djatoka.openurl.OpenURLServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ingester</servlet-name>
    <servlet-class>info.freelibrary.djatoka.ingest.IngestServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>healthCheck</servlet-name>
    <servlet-class>info.freelibrary.djatoka.util.HealthServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>viewer</servlet-name>
    <servlet-class>info.freelibrary.djatoka.view.ViewServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>randomImageViewer</servlet-name>
    <servlet-class>info.freelibrary.djatoka.view.RandomImageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>thumbnailViewer</servlet-name>
    <servlet-class>info.freelibrary.djatoka.view.ImageServlet</servlet-class>
    <init-param>
      <param-name>level</param-name>
      <param-value>1</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>carouselViewer</servlet-name>
    <servlet-class>info.freelibrary.djatoka.view.ImageServlet</servlet-class>
    <init-param>
      <param-name>level</param-name>
      <param-value>2</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>imageViewer</servlet-name>
    <servlet-class>info.freelibrary.djatoka.view.ImageServlet</servlet-class>
    <init-param>
      <param-name>level</param-name>
      <param-value>3</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>fullSizeViewer</servlet-name>
    <servlet-class>info.freelibrary.djatoka.view.ImageServlet</servlet-class>
    <init-param>
      <param-name>level</param-name>
      <param-value>100</param-value>
    </init-param>
  </servlet>
  <!-- Pre-IIIF OpenSeadragon interface, which used: djtilesource -->
  <servlet>
    <servlet-name>zoomViewer</servlet-name>
    <servlet-class>info.freelibrary.djatoka.view.ImageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>iiifViewer</servlet-name>
    <servlet-class>info.freelibrary.djatoka.view.ImageServlet</servlet-class>
  </servlet>
  <!-- For backwards compatibility with Islandora's djatoka expectations -->
  <servlet-mapping>
    <servlet-name>resolver</servlet-name>
    <url-pattern>/resolver</url-pattern>
  </servlet-mapping>
  <!-- What I use for resolving via Pairtree cache files -->
  <servlet-mapping>
    <servlet-name>resolver</servlet-name>
    <url-pattern>/resolve</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>healthCheck</servlet-name>
    <url-pattern>/health</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ingester</servlet-name>
    <url-pattern>/ingest</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>randomImageViewer</servlet-name>
    <url-pattern>/view/thumbnail/random</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>randomImageViewer</servlet-name>
    <url-pattern>/view/carousel/random</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>randomImageViewer</servlet-name>
    <url-pattern>/view/image/random</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>thumbnailViewer</servlet-name>
    <url-pattern>/view/thumbnail/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>carouselViewer</servlet-name>
    <url-pattern>/view/carousel/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>imageViewer</servlet-name>
    <url-pattern>/view/image/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>fullSizeViewer</servlet-name>
    <url-pattern>/view/fullSize/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>zoomViewer</servlet-name>
    <url-pattern>/view/zoom/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>iiifViewer</servlet-name>
    <url-pattern>/iiif/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>viewer</servlet-name>
    <url-pattern>/view/*</url-pattern>
  </servlet-mapping>
  <session-config>
    <!-- 15 minutes -->
    <session-timeout>15</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.xml</welcome-file>
  </welcome-file-list>
</web-app>
